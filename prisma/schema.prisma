generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  name        String?
  email       String  @unique
  password    String
  phone       String?
  location    String?
  bio         String?
  expertise   String?
  payment     String?
  taxId       String?
  portfolio   String?
  title       String?
  image       String?
  resume      String?
  coverLetter String?
}

model Testimonial {
  id        Int     @id @default(autoincrement())
  name      String
  message   String
  avatarUrl String?
}
